generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_CONNECTION_STRING")
}

model UserSubmittedTuning {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  friendlyName String @unique
  tags String[] @default([""])
  description String?
  likes Int @default(0)
  tuning Note[]
}


type Note {
  note NoteValue 
  octave Int
}

enum NoteValue {
  A
  As @map("A#")
  B
  C
  Cs @map("C#")
  D
  Ds @map("D#")
  E
  F
  Fs @map("F#")
  G
  Gs @map("G#")
}